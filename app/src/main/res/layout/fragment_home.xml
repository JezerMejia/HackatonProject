<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu_2"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/logotipo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/logotipo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="¡Para ganar elige sabiamente!"
        android:textAlignment="center"
        android:textColor="@color/gray_800"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logotipo" />

    <Button
        android:id="@+id/comoJugar_btn"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Cómo jugar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/team"
        android:layout_marginBottom="36dp"
        android:layout_marginHorizontal="30dp"
        android:textSize="30sp"
        android:fontFamily="@font/luckiest_guy"
        android:backgroundTint="@color/primary"
        />

    <TextView
        android:id="@+id/team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="Desarrollado por:"
        android:textAlignment="center"
        android:textColor="@color/gray_800"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/estalactica"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/estalactica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/fira_mono_bold"
        android:text="Equipo Estalagmita"
        android:textAlignment="center"
        android:textColor="@color/gray_800"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>